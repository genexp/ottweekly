# .editorconfig
# More info: editorconfig.org

root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
trim_trailing_whitespace = false
indent_style = space

[package.json]
# package.json adhere to --save-dev manipulation styles
indent_style = tab

[Makefile]
indent_style = tab
indent_size = 1
